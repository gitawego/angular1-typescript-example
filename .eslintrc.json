{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "./.eslintrc-node.json",
  "rules": {
    "semi": 2,
    "comma-dangle": 0,
    "no-underscore-dangle": 0,
    "func-names": 0,
    "no-param-reassign": 0,
    "no-new-func": 1,
    "space-before-function-paren": 0,
    "new-cap": 1,
    "global-require": 1,
    "promise/param-names": 1,
    "promise/always-catch": 2,
    "class-methods-use-this": 1,
    "no-plusplus": 0,
    "import/no-extraneous-dependencies": 0,
    "padded-blocks": 0,
    "max-len": [1, 140, 4]
  },
  "globals": {
    "logger": true,
    "angular": true,
    "PRODUCTION": true
  },
  "plugins": [
    "promise"
  ]
}
