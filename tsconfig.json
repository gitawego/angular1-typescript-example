{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "removeComments": true,
    "importHelpers": true,
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "node_modules/@types/"
    ],
    "outDir": "dist-tsc/"
  },
  "exclude": [
    "node_modules",
    "builds",
    "dist",
    "generator-templates",
    "typings/main.d.ts",
    "typings/main"
  ],
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
